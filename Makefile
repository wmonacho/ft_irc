# NAME ===============================================================
NAME =		ft_irc
# ====================================================================

# FILES ==============================================================
FILES =		main			\
			server/server	\
# ====================================================================

# HEADER =============================================================
HEADER =	server/server.hpp	\
# ====================================================================

# FLAGS ==============================================================
FLAGS =		-Wall -Wextra -Werror -std=c++98 -I server/
# ====================================================================

# COMPIL =============================================================
CC =		c++
# ====================================================================

# SUB_DIR_LST ========================================================
SUB_DIR_LST =	server client_srcs
# ====================================================================

# OBJS_DIR ===========================================================
OBJS_DIR =	.objs
# ====================================================================

# DIR_SRC ============================================================
DIR_SRC := srcs#.
# ====================================================================

# OBJ ================================================================
OBJ			=	$(addprefix $(OBJS_DIR)/, $(addsuffix .o,$(FILES)))
# ====================================================================

# SUB_DIR ============================================================
SUB_DIR		=	$(addprefix $(OBJS_DIR)/,$(SUB_DIR_LST))
# ====================================================================

all:				$(NAME)

$(NAME):			$(OBJ)
					$(CC) $(OBJ) -o $(NAME)

$(OBJS_DIR)/%.o:	$(DIR_SRC)/%.cpp Makefile $(DIR_SRC)/$(HEADER) | $(OBJS_DIR)
					${CC} ${FLAGS} -c $< -o $@

$(OBJS_DIR):
					mkdir $(OBJS_DIR)

clean :
					rm -f ${OBJ} ${OBJ_B} $(OBJS_DIR)/*.o 

fclean :
					rm -f ${OBJ} ${OBJ_B} $(OBJS_DIR)/*.o
					rm -f ${NAME}
					rm -rf $(OBJS_DIR)

re :				fclean all

.PHONY:				all clean fclean re
